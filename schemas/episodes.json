{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$comment": "JSON Schema for episodes table",
  "$id": "episodes",
  "title": "episodes",
  "type": "object",
  "properties": {
    "subject_id": {
      "type": "integer",
      "minimum": 0
    },
    "episode_id": {
      "type": "integer",
      "minimum": 0
    },
    "service_id": {
      "type": "string"
    },
    "episode_url_id": {
      "type": "string",
      "minLength": 0
    },
    "video_url_id": {
      "type": "string",
      "minLength": 0
    },
    "remark": {
      "type": "string",
      "minLength": 0
    }
  },
  "required": [
    "subject_id",
    "episode_id",
    "service_id"
  ]
}
